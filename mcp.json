{
  "schemaVersion": "2025-06-18",
  "name": "elevenlabs-music-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for AI music generation using ElevenLabs",
  "author": "ElevenLabs MCP Team",
  "license": "MIT",
  "command": {
    "command": "python",
    "args": ["mcp_elevenlabs_server.py"]
  },
  "capabilities": {
    "tools": {
      "listChanged": false
    }
  },
  "tools": [
    {
      "name": "generate_music",
      "description": "Generate custom AI music using ElevenLabs based on style and description",
      "inputSchema": {
        "type": "object",
        "properties": {
          "style": {
            "type": "string",
            "description": "Music style (upbeat/chill/cozy/dynamic/ambient/classical/rock/jazz/electronic/acoustic)",
            "enum": ["upbeat", "chill", "cozy", "dynamic", "ambient", "classical", "rock", "jazz", "electronic", "acoustic"]
          },
          "description": {
            "type": "string",
            "description": "Custom description for the music to be generated"
          },
          "duration_seconds": {
            "type": "number",
            "description": "Duration of the music in seconds (default: 10, max: 30)",
            "minimum": 5,
            "maximum": 30
          }
        },
        "required": ["style", "description"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["success", "error"],
            "description": "Generation status"
          },
          "music_file": {
            "type": "string",
            "description": "Path to generated music file"
          }
        },
        "required": ["status"]
      }
    }
  ],
  "environment": {
    "variables": {
      "ELEVENLABS_API_KEY": {
        "description": "ElevenLabs API key for music generation",
        "required": false,
        "default": "mock"
      }
    }
  },
  "requirements": {
    "python": ">=3.8",
    "packages": [
      "mcp",
      "aiohttp"
    ]
  }
}